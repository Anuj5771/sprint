pipeline {
    agent any 

    triggers {
        cron('0 2 * * *') 
    }

    stages {
        stage('Jenkins backup') {
            steps {
                sh '''
                    cd /var/lib/jenkins
                    zip -r jenkinsBackup.zip /var/lib/jenkins
                '''
            }
        }

        stage('Upload to S3') {
            steps {
                script {
                    s3Upload consoleLogLevel: 'INFO',
                        dontSetBuildResultOnFailure: false,
                        dontWaitForConcurrentBuildCompletion: false,
                        entries: [[
                            bucket: 'otms-opstree-practice',
                            excludedFile: '',
                            flatten: false,
                            gzipFiles: false,
                            keepForever: false,
                            managedArtifacts: false,
                            noUploadOnFailure: false,
                            selectedRegion: 'eu-north-1',
                            showDirectlyInBrowser: false,
                            sourceFile: 'jenkinsBackup.zip',
                            storageClass: 'STANDARD',
                            uploadFromSlave: false,
                            useServerSideEncryption: false
                        ]],
                        pluginFailureResultConstraint: 'FAILURE',
                        profileName: 's3backup',
                        userMetadata: []
                }
            }
        }
    }
}

# 1. Download Jenkins backup from S3 bucket
aws s3 cp s3://otms-opstree-practice/jenkinsBackup.zip .

# 2. Stop Jenkins service before restoring
sudo systemctl stop jenkins

# 3. Unzip the backup directly to the root (restores /var/lib/jenkins)
sudo unzip -o jenkinsBackup.zip -d /

# 4. Set correct ownership for Jenkins directory
sudo chown -R jenkins:jenkins /var/lib/jenkins

# 5. Start Jenkins service again
sudo systemctl start jenkins

